{
  "tests": [
    {
      "name": "Test user registration",
      "method": "POST",
      "path": "/?action=register",
      "body": {
        "username": "testuser",
        "email": "test@example.com",
        "password": "password123",
        "fullName": "Test User"
      },
      "expectedStatus": 201,
      "expectedBody": {
        "user": {
          "username": "string",
          "email": "string",
          "full_name": "string"
        },
        "session_token": "string",
        "message": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test user login",
      "method": "POST", 
      "path": "/?action=login",
      "body": {
        "email": "test@example.com",
        "password": "password123"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "user": {
          "username": "string",
          "email": "string"
        },
        "session_token": "string"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Test invalid login",
      "method": "POST",
      "path": "/?action=login", 
      "body": {
        "email": "wrong@example.com",
        "password": "wrongpassword"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}